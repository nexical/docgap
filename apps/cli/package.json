{
    "name": "@nexical/docgap",
    "version": "0.1.0",
    "description": "CLI for DocGap",
    "type": "module",
    "bin": {
        "docgap": "./dist/index.js"
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "start": "node dist/index.js",
        "lint": "tsc --noEmit",
        "test:unit": "vitest run tests/unit --coverage",
        "test:e2e": "vitest run tests/e2e",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "@docgap/core": "workspace:*",
        "cac": "^6.7.14",
        "cli-table3": "^0.6.3",
        "ora": "^8.0.0",
        "picocolors": "^1.0.1",
        "yaml": "^2.8.2"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^20.10.6",
        "@types/tmp": "^0.2.6",
        "execa": "^9.6.1",
        "fs-extra": "^11.3.3",
        "tmp": "^0.2.5",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3"
    }
}